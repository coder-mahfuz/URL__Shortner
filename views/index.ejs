<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>URL__Shrinker Using NodeJs</title>
</head>
<body>
  <div class="container">
  <h1 class="row justify-content-center mt-5">Make Your URL Short For Free</h1>
  <form action="/shorturls" method="POST" class="my-4 form-inline">
  <!-- <label for="fullUrl" class="sr-only">Url</label> -->
  <input required placeholder="Enter URL" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2">
  <button type="submit" class="btn btn-primary mt-2">Shrink</button>
</form>

<h2 class="row justify-content-center mb-2 mt-5">Results</h2>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Full URL</th>
      <th>Short URL</th>
      <th>Clicks</th>
    </tr>
  </thead>
  <tbody>
    <% shortUrls.forEach(shortUrl => { %>
      <tr>
        <td>
          <a href="<%= shortUrl.full %>">
            <%= shortUrl.full %>
          </a>
        </td>
        <td>
          <a href="<%= shortUrl.short %>" >
            <%= shortUrl.short %>
          </a>
        </td>
        <td>
          <%= shortUrl.clicks %>
        </td>
      </tr>
   <% }) %>
  
  </tbody>
</table>
</div>
</body>
</html>